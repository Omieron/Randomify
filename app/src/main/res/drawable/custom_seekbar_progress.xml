<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka Plan (Thumb'ın Sağında Kalan Beyaz Alan) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#F5F5F5" /> <!-- Beyazımsı renk -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Dolan Kısım (Thumb'ın Solunda Kalan Sarı Alan) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FFD700" /> <!-- Sarı renk -->
                <corners android:radius="20dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
